<% breadcrumb :application_courses, @application %>
<% @title = 'Add Courses' %>

<div class="row">
  <div class="col-sm-3">
    <%= render partial: 'stages_sidebar', locals: {application: @application, stage: :courses} %>
  </div>

  <div class="col-sm-9">
    <h3 class="no-top-margin">Add Application Courses</h3>

    <div class="col-sm-12 text-right">
      <br>
      <p class="text-darkish small">Continue to the next section when ready.</p>
      <%= button_to 'Save and continue...', applications_statement_next_path(@application), method: :post, class: 'next-button' %>
    </div>
  </div>
</div>
