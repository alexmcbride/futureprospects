<h1>Browse Colleges</h1>
<hr class="small">

<div class="col-md-3">
  <div class="row">
    <div class="list-group small">
      <% @colleges.each do |college| %>
          <% active = college == @college ? 'active' : '' %>
          <%= link_to college.name, college_path(college), class: "list-group-item #{active}" %>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-9">
  <h2><%= @college.name %></h2>

  <%= markdown(@college.description) %>

  <div class="row">
    <div class="col-sm-6">
      <h3>Address</h3>
      <%= markdown(@college.address) %>
    </div>
    <div class="col-sm-6">
      <h3>Contact</h3>
      <ul>
        <li>Web: <%= link_to @college.website, @college.website %></li>
        <li>Tel: <%= @college.telephone %></li>
        <li>Email: <%= mail_to @college.email %></li>
      </ul>
    </div>
  </div>
</div>