<% breadcrumb :college, @college %>
<% @title = 'View College Details' %>

<!-- Colleges Sidebar -->
<div class="col-md-3">
  <div class="row">
    <div class="list-group small">
      <% @colleges.each do |college| %>
          <% active = 'active' if college == @college %>
          <%= link_to college.name, college, class: "list-group-item #{active}" %>
      <% end %>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="col-md-9">
  <%= render 'shared/college_info', college: @college %>
</div>