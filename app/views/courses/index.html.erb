<h1>Browse Available Courses</h1>
<hr class="small">

<div class="col-md-3">
  <div class="row">
    <%= render partial: 'shared/course_search' %>

    <h4>Categories</h4>
    <div class="list-group small">
      <% @categories.each do |category| %>
        <% active = category == @category ? 'active' : '' %>
        <%= link_to category.name, courses_category_path(category), class: "list-group-item #{active}" %>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-9">
  <% if @courses.nil? or @courses.empty? %>
      <p class="text-center text-warning"><em>There are no courses that match your query.</em></p>
  <% else %>
    <div class="list-group">
      <% @courses.each do |course| %>
          <a href="<%= url_for(course) %>" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
              <h3 class="mb-1"><%= course.title %></h3>
              <small style="float: right;"><%= course.college.name %></small>
              <small><%= course.start_date %> &rarr; <%= course.end_date %></small>
            </div>
          </a>
      <% end %>
    </div>
  <% end %>
</div>