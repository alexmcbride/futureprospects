<% breadcrumb :register %>
<% @title = 'Register' %>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <p>Enter your personal info in order to create an account with the site. Once your account is activated you will be
        able to create your application.</p>

      <div class="form-group">
        <%= f.label :email, class: 'text-capitalize' %><br>
        <%= f.email_field :email, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :first_name, class: 'text-capitalize'  %><br>
        <%= f.text_field :first_name, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :family_name, class: 'text-capitalize'  %><br>
        <%= f.text_field :family_name, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :scottish_candidate_number, class: 'text-capitalize'  %><br>
        <%= f.text_field :scottish_candidate_number, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :national_insurance_number, class: 'text-capitalize'  %><br>
        <%= f.text_field :national_insurance_number, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'text-capitalize' %>
        <% if @minimum_password_length  %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'text-capitalize'  %><br>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Sign up', class: 'btn btn-primary btn-block btn-md' %>
      </div>
    <% end %>
    <div class="text-right">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
