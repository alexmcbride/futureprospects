<div class="row">
  <!-- Search Courses Column -->
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">

        <h2>Search Courses</h2>
        <p>Search our course listings to find the one that's perfect for you.</p>

        <%= render partial: 'shared/course_search' %>

        <h2>Browse Courses</h2>
        <p>Browse the categories list to view all of the opportunities we offer.</p>
        <ul>
          <li><%= link_to 'All Courses', courses_path %></li>
          <% @categories.each do |category| %>
              <li><%= link_to category.name, courses_category_path(category) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Login Column -->
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if student_signed_in? %>
          <h2>My Application</h2>

          <p>Your Username: <strong><%= current_student.username %></strong></p>

          <p>Here you can see your current application and its current status.</p>

          <% if @application.nil? %>
            <%= form_tag applications_create_path, method: :post do %>
              <%= submit_tag 'Create application', class: 'btn btn-success btn-block' %>
            <% end %>
          <% elsif @application.incomplete? %>
            <%= link_to 'Continue Application', applications_continue_path(@application), class: 'btn btn-success btn-block', role: 'button' %>
          <% else %>
            <%= link_to 'Track Application', applications_continue_path(@application), class: 'btn btn-success btn-block', role: 'button' %>
          <% end %>

        <% else %>
          <h2>Students</h2>
          <p>Register now to apply for your dream course.</p>
          <%= link_to 'Register', new_student_registration_path, class: 'btn btn-default btn-block', role: 'button' %>
          <br>
          <p>Sign in to track your application.</p>
          <%= link_to 'Sign In', new_student_session_path, class: 'btn btn-default btn-block', role: 'button' %>

          <h2>Colleges</h2>
          <p>Sign in to manage your student intake.</p>
            <%= link_to 'Sign In', nil, class: 'btn btn-default btn-block', role: 'button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
