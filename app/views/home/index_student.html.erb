<div class="row">
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2>Welcome to Future Prospects.</h2>
        <p>Thank you for creating an account! Now, in order to apply for college you'll need <%= link_to 'create an application', applications_create_path, method: :post %> by
          following the instructions below!</p>
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2>Application Stages</h2>
        <p class="text-darkish">To apply to for a course you must complete the following stages.</p>
        <ul class="list-group">
          <li class="list-group-item active">
            Create Application
            <span class="badge">
              Current
            </span>
          </li>
          <li class="list-group-item">Submit Application</li>
          <li class="list-group-item">Make Payment</li>
          <li class="list-group-item">Await Decisions</li>
          <li class="list-group-item">Choose Offer</li>
          <li class="list-group-item">Complete</li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Login Column -->
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if student_signed_in? %>
            <h2>Current Stage</h2>

            <p class="text-darkish">Select the option below to continue the application process.</p>

            <% if @application.nil? %>
                <%= form_tag applications_create_path, method: :post do %>
                    <%= submit_tag 'Create application', class: 'btn btn-success btn-block' %>
                <% end %>
            <% elsif @application.incomplete? %>
                <%= link_to 'Continue Application', applications_continue_path(@application), class: 'btn btn-success btn-block', role: 'button' %>
            <% else %>
                <%= link_to 'Track Application', applications_continue_path(@application), class: 'btn btn-success btn-block', role: 'button' %>
            <% end %>

        <% else %>
            <h2>Students</h2>
            <p>Register now to apply for your dream course.</p>
            <%= link_to 'Register', new_student_registration_path, class: 'btn btn-default btn-block', role: 'button' %>
            <br>
            <p>Sign in to track your application.</p>
            <%= link_to 'Sign In', new_student_session_path, class: 'btn btn-default btn-block', role: 'button' %>

            <h2>Colleges</h2>
            <p>Sign in to manage your student intake.</p>
            <%= link_to 'Sign In', nil, class: 'btn btn-default btn-block', role: 'button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
