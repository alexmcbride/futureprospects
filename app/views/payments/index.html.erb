<%
  @title = 'Make Payment'
%>

<div class="row">
  <div class="col-sm-4">
    <div class="well">

    </div>
  </div>

  <div class="col-sm-8">
    <h3 class="no-top-margin">Payment</h3>

    <p>Before the application can be considered, a payment must be received for the following amount:</p>

    <p><strong>Amount: <%= number_to_currency @application.calculate_fee_pounds, unit: 'Â£' %></strong></p>

    <p>You are being charged for the following courses:</p>

    <div class="well">
      <ol>
        <% @application.course_selections.each do |selection| %>
            <li><strong><%= selection.course.title %></strong> at <%= selection.course.college.name %></li>
        <% end %>
      </ol>
    </div>

    <%= form_tag payments_continue_path, method: :post do %>
      <p>Please choose your prefer payment method.</p>

      <div class="form-group">
        <% options = options_for_select(Payment.types.map {|name, value| [name.humanize, value]}) %>
        <%= select_tag :payment_type, options, {class: 'form-control'} %>
      </div>

      <div class="text-right">
        <p class="text-darkish small">Press continue to enter your payment details.</p>
        <%= submit_tag 'Continue', class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>

