<%
  breadcrumb :payments
  @title = 'Payment Transactions'
%>

<p>Here is a list of all of the payment transactions on your account.</p>

<% if @payments.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Status</th>
          <th>Type</th>
          <th>Amount</th>
          <th>Date</th>
          <th>Card Holder</th>
          <th>Card Number</th>
        </tr>
      </thead>
      <tbody>
        <% @payments.each do |payment| %>
          <tr>
            <td><%= payment.status.humanize %></td>
            <td><%= payment.payment_type.humanize %></td>
            <td><%= number_to_currency payment.amount_pounds, unit: 'Â£' %></td>
            <td><%= format_date payment.created_at %></td>
            <td><%= payment.card_holder %></td>
            <td><%= "************#{payment.last_four_digits}" if payment.credit_card? %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-darkish"><em>There are no transactions to display</em></p>
<% end %>