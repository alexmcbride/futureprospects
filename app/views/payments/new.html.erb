<%
  breadcrumb :payments_new
  @title = 'Make Payment'
%>

<div class="row">
  <div class="col-sm-3">
    <%= render 'stages_sidebar', stage: :new %>
  </div>

  <div class="col-sm-9">
    <% if @payment.paypal? %>
      <!-- Show paypal form. -->
      <div class="row">
        <div class="col-xs-10">
          <h3 class="no-top-margin">Confirm PayPal Purchase</h3>
        </div>
        <div class="col-xs-2">
          <%= image_tag 'paypal.png', class: 'img-responsive' %>
        </div>
      </div>

      <p>Amount to be paid: <strong><%= number_to_currency @payment.amount_pounds, unit: '£' %></strong></p>
      <p>Continue to authorize your payment through the PayPal provider.</p>
      <hr>
      <%= render 'paypal_form', payment: @payment %>
    <% else %>
        <!-- Show credit card form. -->
      <h3 class="no-top-margin">Enter Credit/Debit Card Details</h3>
      <p>Amount to be paid: <strong><%= number_to_currency @payment.amount_pounds, unit: '£' %></strong></p>
      <p>Enter your credit or debit card details below.</p>
      <hr>
      <%= render 'credit_card_form', payment: @payment %>
    <% end %>
  </div>
</div>