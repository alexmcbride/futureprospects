<%
  breadcrumb :payments
  @title = 'Make Payment'
%>

<div class="row">
  <div class="col-sm-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <h3 class="no-top-margin">Payment Stages</h3>
        <p><em>This section will walk you through the process of paying your application fee.</em></p>
        <ul class="list-group">
          <li class="list-group-item active">
            <div class="row">
              <div class="col-xs-10">Payment Method</div>
              <div class="col-xs-2 text-right"><%= icon('arrow-circle-right', class: 'app-arrow') %></div>
            </div>
          </li>
          <li class="list-group-item">Enter Details</li>
          <li class="list-group-item">Confirmation</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-sm-9">
    <h3 class="no-top-margin">Choose Payment Method</h3>
    <p>Before the application can be considered, a payment must be received for the following:</p>
    <p><strong>Amount: <%= number_to_currency @application.calculate_fee_pounds, unit: 'Â£' %></strong></p>
    <p>You are being charged for <%= pluralize @application.course_selections_count, 'course' %>:</p>

    <ol>
      <% @application.course_selections.each do |selection| %>
        <li><%= selection.course.title %></li>
      <% end %>
    </ol>

    <hr>

    <%= form_tag payment_method_continue_path, method: :post do %>
      <p>Please choose your prefer payment method.</p>

      <div class="form-group">
        <%
          options = '<option disabled="disabled" selected="selected">-- Choose --</option>'.html_safe +
                    '<option value="credit_card">Credit/Debit Card</option>'.html_safe +
                    '<option value="paypal">PayPal</option>'.html_safe
        %>
        <%= select_tag :payment_type, options, {class: 'form-control'} %>
      </div>

      <div class="text-right">
        <p class="text-darkish small">Press continue to enter your payment details.</p>
        <%= submit_tag 'Continue', class: 'next-button' %>
      </div>
    <% end %>
  </div>
</div>

