<%
  breadcrumb :payment_authorized, @payment
  @title = 'Payment Authorized'
%>

<div class="row">
  <div class="col-sm-3">
    <%= render 'stages_sidebar', stage: :show %>
  </div>

  <div class="col-sm-9">
    <h3 class="no-top-margin">Payment Received</h3>

    <p class="text-darkish">The following payment has been successfully received:</p>

    <div class="row">
      <div class="col-xs-3">
        <strong>Amount</strong>
      </div>
      <div class="col-xs-6">
        <%= number_to_currency @payment.amount_pounds, unit: 'Â£' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <strong>Payment Type</strong>
      </div>
      <div class="col-xs-6">
        <%= @payment.payment_type.humanize %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <strong>Payment Date</strong>
      </div>
      <div class="col-xs-6">
        <%= format_date @payment.created_at %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <strong>Card Holder</strong>
      </div>
      <div class="col-xs-6">
        <%= @payment.card_holder %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <strong>Card Number</strong>
      </div>
      <div class="col-xs-6">
        ************<%= @payment.last_four_digits %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <strong>Status</strong>
      </div>
      <div class="col-xs-6">
        <%= @payment.status.humanize %>
      </div>
    </div>

    <hr>

    <div class="well">
      <h3 class="no-top-margin">What Next?</h3>
      <p>Your application will now be sent to your selected colleges in order to be considered. You will be contacted
        when a decision has been made. You can check back to track the status of your application as needed.</p>

      <br>

      <div class="text-right">
        <%= link_to 'Continue', root_path, class: 'next-button', role: 'button' %>
      </div>
    </div>
  </div>
</div>

