<%= form_tag(path, method: 'get') do %>
  <div class="input-group">
    <% if params[:college] %>
      <input type="hidden" name="college" value="<%= params[:college] %>">
    <% end %>
    <% if params[:category] %>
      <input type="hidden" name="category" value="<%= params[:category] %>">
    <% end %>
    <input type="text" class="form-control" name="search" placeholder="Search course, category, or college..." value="<%= @search_term %>">
    <span class="input-group-btn">
      <button class="btn btn-default" type="submit">Go</button>
    </span>
  </div>
<% end %>