<%
  breadcrumb :staff_applications_full, @application
  @title = 'View Application'
%>

<div class="row">
  <div class="col-md-3 col-sm-12">
    <div class="well">
      <h3 class="no-top-margin">Information</h3>
      <ul class="application-info-list">
        <li>Username: <%= @application.student.username %></li>
        <li>Submitted: <%= format_date @application.submitted_date %></li>
        <li>Created: <%= format_date @application.created_at %></li>
        <li>Updated: <%= format_date @application.updated_at %></li>
        <li>Status: <%= @application.status.humanize %></li>
        <li>Replies Due: <%= (format_date @application.replies_due) or 'Never' %></li>
      </ul>
    </div>
  </div>

  <div class="col-md-9 col-sm-12">
    <% if @application.submitting? %>
        <div class="alert alert-warning">
          <strong>Warning</strong>
          This application has not been submitted yet.
        </div>
    <% end %>

    <%= render 'shared/application_profile', application: @application %>
    <%= render 'shared/application_long', application: @application %>

  </div> <!-- col -->
</div> <!-- row -->
