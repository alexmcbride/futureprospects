<%= form_for(category, url: path) do |f| %>
  <%= form_errors category %>

  <div class="form-group">
    <%= f.label :name, 'Category Name' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="actions text-right">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
