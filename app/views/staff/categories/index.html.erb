<% breadcrumb :staff_categories %>
<% @title = 'Manage Categories' %>

<div class="row">
  <div class="col-sm-3">
    <%= render 'staff/shared/courses_sidenav', page: :categories %>

    <p class="text-darkish small">Use the button below to create a new category.</p>
    <%= link_to 'Add Category', new_staff_category_path, class: 'btn btn-default btn-block', role: 'button' %>
  </div>
  <div class="col-sm-9">

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Courses</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.courses.count %></td>
            <td><%= link_to 'Show', staff_category_path(category) %></td>
            <td><%= link_to 'Edit', edit_staff_category_path(category) %></td>
            <td><%= link_to 'Destroy', staff_category_remove_path(category) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
