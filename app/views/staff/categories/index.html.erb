<% breadcrumb :staff_categories %>
<% @title = 'Manage Categories' %>

<div class="row">
  <div class="col-xs-12">

    <p class="text-darkish small">Add a new category to the list.</p>

    <%= render 'form', category: @category, path: staff_categories_path %>


    <hr>

    <h3>Categories</h3>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Courses</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.courses_count %></td>
              <td><%= link_to icon('pencil-square'), edit_staff_category_path(category), title: 'Edit Name' %></td>
              <td><%= link_to icon('trash'), staff_category_remove_path(category), title: 'Delete Category' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
