<% breadcrumb :staff_colleges %>
<% @title = 'Browse Colleges' %>

<h1 class="no-top-margin">Colleges</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @colleges.each do |staff_college| %>
        <tr>
          <td><%= link_to staff_college.name, staff_college_path(staff_college), class: 'table-link' %></td>
          <td><%= link_to icon('pencil-square'), edit_staff_college_path(staff_college), title: 'Edit' %></td>
          <td><%= link_to icon('trash'), staff_college_remove_path(staff_college), title: 'Delete' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Create New College', new_staff_college_path %>
