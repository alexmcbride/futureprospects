<% breadcrumb :staff_remove_college, @college %>
<% @title = 'Remove Course' %>

  <div class="alert-warning alert">
    <%= icon 'exclamation-circle' %>
    Warning: The whole college will be deleted, along with all staff members, courses, and course selections. This action
    cannot be undone.
  </div>

  <p>Are you sure you want to delete the following college?</p>
  <p><strong><%= @college.name %></strong></p>
  <p>For security purposes you must type the full name of the college exactly as it appears in order for it to be deleted.</p>

  <%= form_for @college, url: staff_college_path(@college), method: :delete do |f| %>
      <%= hidden_field_tag :_method, 'delete' %>

      <%= form_errors @college %>

      <div class="form-group">
        <%= text_field_tag :college_name, nil, class: 'form-control', autocomplete: :off %>
      </div>

      <div class="text-right">
        <%= button_tag(:class => "btn btn-danger") do |s| %>
            <%= icon('exclamation-triangle') %>
            Delete College
        <% end %>
      </div>
  <% end %>