<%= form_for(course, url: path) do |f| %>
  <p class="text-darkish">Enter course details and then click save. You can use <%= link_to 'markdown', 'https://daringfireball.net/projects/markdown/basics' %> in the following fields:
    description, entry requirements, and career prospects.</p>

  <%= form_errors course %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class:'form-control', rows: '5' %>
  </div>

  <div class="form-group">
    <%= f.label :entry_requirements %>
    <%= f.text_area :entry_requirements, class:'form-control', rows: '5' %>
  </div>

  <div class="form-group">
    <%= f.label :career_prospects %>
    <%= f.text_area :career_prospects, class:'form-control', rows: '5' %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, value: format_date(course.start_date), class: 'datepicker-field form-control', 'data-provide' => 'datepicker', placeholder: 'dd/mm/yyyy' %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.text_field :end_date, value: format_date(course.end_date), class: 'datepicker-field form-control', 'data-provide' => 'datepicker', placeholder: 'dd/mm/yyyy' %>
  </div>

  <div class="form-group">
    <%= f.label :level %>
    <%= f.text_field :level, class: 'form-control', placeholder: 'SCQF level 5' %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, 'Category' %>
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name, course.category_id), {}, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :spaces %>
    <%= f.number_field :spaces, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, options_for_select(Course.statuses.keys.map {|k| [k.humanize, k]}, course.status), {}, class:'form-control' %>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-10">
        <%= f.label :image %>
        <%= f.file_field :image, class: 'form-control' %>
        <%= f.hidden_field :image_cache, value: course.image_cache %>
      </div>
      <% unless course.image.file.nil? %>
        <div class="col-xs-2 text-right">
          <%= link_to course.image.url do %>
            <%= image_tag course.image.url(:thumb), class: 'img-responsive img-thumbnail image-border' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <br>

  <div class="actions text-right">
    <p class="text-darkish small">Save changes when completed.</p>
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
