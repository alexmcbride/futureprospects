<% @title = 'Courses' %>


<div class="row">
  <div class="col-sm-3">
    <div class="list-group">
      <%= link_to 'Browse Courses', nil, class: 'list-group-item active' %>
      <%= link_to 'Add Course', nil, class: 'list-group-item' %>
      <%= link_to 'Manage Categories', nil, class: 'list-group-item' %>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag staff_courses_path, method: :get do%>
          <div class="form-group">
            <%= label_tag :title, 'Courses' %>
            <div class="input-group">
              <%= text_field_tag :title, params[:title], class: 'form-control', name: 'title' %>
              <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="$('#title').val('');" title="Clear">
                  <%= icon('times') %>
                </button>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag :category, 'Categories' %>
            <% options = '<option value="0">All Categories</option>'.html_safe + options_from_collection_for_select(@categories, :id, :name, params[:category]) %>
            <%= select_tag :category, options, {class: 'form-control'} %>
          </div>

          <div class="form-group">
            <%= label_tag :status, 'Status' %>
            <%= select_tag :status, options_for_select(Course.statuses.keys.map { |w| [w.humanize, w] }, params[:status]), {class: 'form-control'} %>
          </div>

          <%= submit_tag 'Apply Filter', class: 'btn btn-block' %>

        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-9">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><a href="">Course <%= icon('arrows-v', style: 'font-size: 10pt;') %></a></th>
        <th><a href="">Category <%= icon('arrows-v', style: 'font-size: 10pt;') %></a></th>
        <th><a href="">Status <%= icon('arrows-v', style: 'font-size: 10pt;') %></a></th>
        <th><a href="">Manage <%= icon('arrows-v', style: 'font-size: 10pt;') %></a></th>
      </tr>
      </thead>
      <tbody>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.category.name %></td>
            <td><%= course.status %></td>
            <td>Edit | Remove</td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <div class="digg_pagination text-center">
      <%= will_paginate @courses %>
    </div>
  </div>
</div>
