<% breadcrumb :staff_courses %>
<% @title = 'Manage Courses' %>

<div class="row">
  <div class="col-sm-3">
    <%= render 'staff/shared/courses_sidenav', page: :index %>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag staff_courses_path, method: :get do%>
          <%= hidden_field_tag :sort, params[:sort] %>

          <div class="form-group">
            <%= label_tag :title, 'Filter Courses' %>
            <div class="input-group">
              <%= text_field_tag :title, params[:title], class: 'form-control', name: 'title' %>
              <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="$('#title').val('');" title="Clear">
                  <%= icon('times') %>
                </button>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag :category_id, 'Filter Categories' %>
            <% options = '<option value="0">All Categories</option>'.html_safe + options_from_collection_for_select(@categories, :id, :name, params[:category_id]) %>
            <%= select_tag :category_id, options, {class: 'form-control'} %>
          </div>

          <div class="form-group">
            <%= label_tag :status, 'Filter Status' %>
            <% options = '<option value="-1">All Statuses</option>'.html_safe + options_for_select(Course.statuses.keys.map { |w| [w.humanize, w] }, params[:status]) %>
            <%= select_tag :status, options, {class: 'form-control'} %>
          </div>

          <%= submit_tag 'Apply Filter', class: 'btn btn-block' %>

        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-9">
    <% if @courses.empty? %>
      <p class="text-darkish small text-center"><em>There are no courses to display</em></p>
    <% else %>
      <table class="table table-striped table-staff">
        <thead>
        <tr>
          <th>
            <%= link_to course_table_filter_path('title', params) do %>
                Course
                <%= icon('arrows-v', class: 'sort-arrow') %>
            <% end %>
          </th>
          <th>
            <%= link_to course_table_filter_path('category_id', params) do %>
                Category
                <%= icon('arrows-v', class: 'sort-arrow') %>
            <% end %>
          </th>
          <th>
            <%= link_to course_table_filter_path('status', params) do %>
                Status
                <%= icon('arrows-v', class: 'sort-arrow') %>
            <% end %>
          </th>
          <th>
            Students
          </th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td title="<%= course.title %>"><%= truncate course.title, length: 50 %></td>
            <td title="<%= course.category.name %>"><%= truncate course.category.name, length: 25 %></td>
            <td><%= course.status.humanize %></td>
            <td><%= course.course_selections.count %></td>
            <td><%= link_to icon('eye'), staff_course_path(course), title: 'View Course' %></td>
            <td><%= link_to icon('pencil-square'), edit_staff_course_path(course), title: 'Edit' %></td>
            <td><%= link_to icon('trash'), staff_course_remove_path(course), title: 'Delete' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="digg_pagination text-center">
        <%= will_paginate @courses %>
      </div>
    <% end %>
  </div>
</div>
