<% breadcrumb :staff_courses %>
<% @title = 'Manage Courses' %>

<div class="row">
  <div class="col-sm-3">
    <%= render 'staff/shared/courses_sidenav', page: :index %>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag staff_courses_path, method: :get do%>
          <%= hidden_field_tag :sort, params[:sort] %>

          <div class="form-group">
            <%= label_tag :title, 'Filter Courses' %>
            <div class="input-group">
              <%= text_field_tag :title, params[:title], class: 'form-control', name: 'title' %>
              <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="$('#title').val('');" title="Clear">
                  <%= icon('times') %>
                </button>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag :category, 'Filter Categories' %>
            <% options = '<option value="0">All Categories</option>'.html_safe + options_from_collection_for_select(@categories, :id, :name, params[:category]) %>
            <%= select_tag :category, options, {class: 'form-control'} %>
          </div>

          <div class="form-group">
            <%= label_tag :status, 'Filter Status' %>
            <% options = '<option value="-1">All Statuses</option>'.html_safe + options_for_select(Course.statuses.keys.map { |w| [w.humanize, w] }, params[:status]) %>
            <%= select_tag :status, options, {class: 'form-control'} %>
          </div>

          <%= submit_tag 'Apply Filter', class: 'btn btn-block' %>

        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-9">
    <% if @courses.empty? %>
      <p class="text-darkish small text-center"><em>There are no courses to display</em></p>
    <% else %>
      <table class="table table-striped table-staff">
        <thead>
        <tr>
          <th><%= link_to "Course #{icon('arrows-v', class: 'sort-arrow')}".html_safe, staff_courses_path(sort: 'title', page: params[:page], title: params[:title], category: params[:category], status: params[:status]) %></th>
          <th><%= link_to "Category #{icon('arrows-v', class: 'sort-arrow')}".html_safe, staff_courses_path(sort: 'category', page: params[:page], title: params[:title], category: params[:category], status: params[:status]) %></th>
          <th><%= link_to "Status #{icon('arrows-v', class: 'sort-arrow')}".html_safe, staff_courses_path(sort: 'status', page: params[:page], title: params[:title], category: params[:category], status: params[:status]) %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @courses.each do |course| %>
            <tr>
              <td><%= truncate course.title, length: 50 %></td>
              <td><%= course.category.name %></td>
              <td><%= course.status.humanize %></td>
              <td>
                <%= link_to icon('pencil-square'), edit_staff_course_path(course), title: 'Edit' %>
                |
                <%= link_to icon('trash'), staff_course_path(course), title: 'Delete', method: :delete, data: {confirm: 'Are you sure you want to delete?'} %>
                |
                <%= link_to icon('eye'), course_path(course), title: 'View Course' %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <div class="digg_pagination text-center">
        <%= will_paginate @courses %>
      </div>
    <% end %>
  </div>
</div>
