<% breadcrumb :staff_users %>
<% @title = 'Staff Members' %>

<div class="row">
  <div class="col-sm-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag staff_users_path, method: :get do %>
          <!-- TODO: filterrific -->

          <div class="form-group">
            <%= label_tag :fullname, 'Filter staff' %>
            <div class="input-group">
              <%= text_field_tag :fullname, params[:fullname], class: 'form-control', name: 'title' %>
              <span class="input-group-btn">
                  <button class="btn btn-default" type="button" onclick="$('#fullname').val('');" title="Clear">
                    <%= icon('times') %>
                  </button>
                </span>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag :college, 'Filter college' %>
            <% options = '<option value="0">All Colleges</option>'.html_safe + options_from_collection_for_select(@colleges, :id, :name, params[:college]) %>
            <%= select_tag :college, options, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= label_tag :job_title, 'Filter job titles' %>
            <% options = '<option value="all">All Job Titles</option>'.html_safe + options_from_collection_for_select(@job_titles, :job_title, :job_title, params[:job_title]) %>
            <%= select_tag :job_title, options, class: 'form-control' %>
          </div>

          <%= submit_tag 'Apply Filter', class: 'btn btn-block' %>
       <% end %>
      </div>
    </div>

    <%= link_to new_staff_user_path, class: 'btn btn-default btn-block', role: 'button' do %>
      <%= icon('plus-circle') %>
      Add Staff Member
    <% end %>
  </div>

  <div class="col-sm-9">
    <div class="table-responsive">
      <table class="table table-striped table-condensed">
        <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <th>Joined</th>
          <th colspan="4"></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.full_name, staff_user_path(user) %></td>
              <td><%= user.email %></td>
              <td><%= format_date user.created_at %></td>
              <td>
                <%= link_to staff_user_permissions_path(user), title: 'Permissions' do %>
                  <%= icon('ban') %>
                <% end %>
              </td>
              <td><%= link_to icon('pencil-square'), edit_staff_user_path(user), title: 'Edit' %></td>
              <td><%= link_to icon('trash'), staff_user_remove_path(user), title: 'Delete' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="digg_pagination text-center">
      <%= will_paginate @users %>
    </div>
  </div>
</div>
