<% breadcrumb :staff_users %>
<% @title = 'Staff Members' %>

<div class="table-responsive">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <td>Joined</td>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= format_date user.created_at %></td>
          <td><%= link_to 'Show', staff_user_path(user) %></td>
          <td><%= link_to 'Edit', edit_staff_user_path(user) %></td>
          <td><%= link_to 'Destroy', staff_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="digg_pagination text-center">
  <%= will_paginate @users %>
</div>

<br>

<%= link_to 'New Staff Member', new_staff_user_path %>
