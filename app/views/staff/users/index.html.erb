<% breadcrumb :staff_users %>
<% @title = 'Staff Members' %>

<div class="row">
  <div class="col-sm-3">
    <div class="well">
      <%= form_tag do %>
        <div class="form-group">
          <%= label_tag :fullname, 'Filter staff' %>
          <%= text_field_tag :fullname, params[:fullname], class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :college, 'Filter college' %>
          <%= select_tag :college, options_from_collection_for_select(@colleges, :id, :name, params[:college]), class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :job_title, 'Filter job titles' %>
          <%= select_tag :job_title, options_from_collection_for_select(@job_titles, :job_title, :job_title, params[:job_title]), class: 'form-control' %>
        </div>

        <%= submit_tag 'Apply Filter', class: 'btn btn-block' %>
     <% end %>
    </div>
  </div>

  <div class="col-sm-9">
    <div class="table-responsive">
      <table class="table table-striped table-condensed">
        <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <td>Joined</td>
          <th colspan="4"></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><%= format_date user.created_at %></td>
              <td><%= link_to 'Permissions', staff_user_permissions_path(user) %></td>
              <td><%= link_to 'Show', staff_user_path(user) %></td>
              <td><%= link_to 'Edit', edit_staff_user_path(user) %></td>
              <td><%= link_to 'Delete', staff_user_remove_path(user) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="digg_pagination text-center">
      <%= will_paginate @users %>
    </div>
  </div>
</div>
