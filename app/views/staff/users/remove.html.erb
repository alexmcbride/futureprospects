<% breadcrumb :staff_users_remove, @user %>
<% @title = 'Remove User' %>

<div class="alert-warning alert">
  <%= icon 'exclamation-circle' %>
  Warning: This action cannot be undone.
</div>

<p>Are you sure you want to delete the following user?</p>
<p><strong><%= @user.username %></strong></p>
<p>For security purposes you must type the full username exactly as it appears in order for the user to be deleted.</p>

<%= form_for @user, url: staff_user_path(@user), method: :delete do |f| %>
    <%= hidden_field_tag :_method, 'delete' %>

    <%= form_errors @user %>

    <div class="form-group">
      <%= text_field_tag :user_username, nil, class: 'form-control', autocomplete: :off %>
    </div>

    <div class="text-right">
      <%= button_tag(:class => "btn btn-danger") do |s| %>
          <%= icon('trash') %>
          Delete User
      <% end %>
    </div>
<% end %>